<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="32dp"
    android:layout_height="match_parent"
    tools:context="cn.edu.swufe.first.basketball">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20sp"
            android:padding="5sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tnam"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/tname"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tsc"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="@string/tsc"
                    android:textSize="45dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/j3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_orange_light"
                        android:text="@string/j3"
                        android:textSize="19dp" />

                    <Button
                        android:id="@+id/j2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_orange_light"
                        android:text="@string/j2"
                        android:textSize="19dp" />

                    <Button
                        android:id="@+id/j1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/holo_orange_light"
                        android:text="@string/j1"
                        android:textSize="19dp" />

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tnameb"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/tnameb"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tscb"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="@string/tscb"
                    android:textSize="45dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/j3b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_orange_light"
                        android:text="@string/j3b"
                        android:textSize="19dp" />

                    <Button
                        android:id="@+id/j2b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_orange_light"
                        android:text="@string/j2b"
                        android:textSize="19dp" />

                    <Button
                        android:id="@+id/j1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/holo_orange_light"
                        android:text="@string/j1b"
                        android:textSize="19dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/clear"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/clear"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btos"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:background="@android:color/holo_blue_light"
            android:text="@string/stob"
            android:textSize="13dp" />
    </LinearLayout>


</RelativeLayout>
